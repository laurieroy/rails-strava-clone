<h1>My <%= @activity.category.humanize %> on <%= format_date(@activity.date) %>: </h1>
<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Time</th>
				<th scope="col">Duration</th>
				<th scope="col">Distance</th>
				<th scope="col">Difficulty</th>
				<th scope="col">Pace</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			<th scope="col"><%= format_clock_time(@activity.date) %></th>
			<th scope="col"><%= format_time(@activity.duration) if @activity.duration.present? %></th>
			<th scope="col"><%= @activity.distance %> <%= @activity.unit  if @activity.distance.present?%></th>
			<th scope="col"><%= @activity.difficulty %></th>
			<th scope="col">	<%= format_time(@activity.calculated_pace) if (@activity.calculated_pace.present?) %></th>
			<th scope="col">

				<div class="btn-group">
					<%= link_to "Edit", edit_activity_path(@activity), class: "btn btn-sm btn-outline-primary" %>
					<%= link_to "Delete", activity_path(@activity), method: :delete, data: {confirm: "Really delete this activity?" }, class: "btn btn-sm btn-outline-danger" %>
				</div>
				</tbody>
	</table>
</div>
