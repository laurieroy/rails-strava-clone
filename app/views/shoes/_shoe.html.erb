<tr>
	<%# <th scope="col"><%= format_date_time(shoe.date) %><%#</th> %>
	<th scope="col"><%= shoe.name %></th>
	<th scope="col"><%= shoe.distance_in_miles %> miles</th>
	<th scope="col"><%= shoe.retired? %></th>

	<th scope="col">
		<% if shoe.present? %>
		<div class="btn-group">
			<%= link_to "Edit", edit_shoe_path(shoe), class: "btn btn-sm btn-outline-primary" %>
			<%= link_to "Retire", edit_shoe_path(shoe), class: "btn btn-sm btn-outline-secondary" %>
			<%= link_to "Delete", shoe_path(shoe), method: :delete, data: {confirm: "Really delete this shoe?" }, class: "btn btn-outline-danger" if shoe.persisted? %>
		</div>
		<% end %>
	</th>

</tr>


