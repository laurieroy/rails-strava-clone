<%#= render "search_form" %>

<% unless @shoes.empty? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <%# <th scope="col">Date</th> %>
          <th scope="col">Name</th>
          <th scope="col">Miles on shoe</th>
          <th scope="col">Retired?</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @shoes %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center mt-4">
		<%== pagy_bootstrap_nav( @pagy ) %>
	</div>
<% else %>
  <% if params[:q].nil? %>
    <p><%= link_to "Add your first shoe", new_shoe_path %></p>
  <% else %>
    <p>No results</p>
  <% end %>
<% end %>