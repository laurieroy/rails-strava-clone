<% unless @totals.empty? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Distance (miles)</th>
					<th scope="col">Duration</th>
        </tr>
      </thead>
      <tbody>
        <%= render @totals %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center mt-4">
		<%== pagy_bootstrap_nav( @pagy ) %>
	</div>
<% else %>
	<p>No results</p>
<% end %>
