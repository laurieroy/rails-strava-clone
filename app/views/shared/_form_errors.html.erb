<% if object.errors.any? %>
	<div id="form-errors" class="alert alert-danger">
		<h5>The following <%= pluralize(object.errors.count, "error") %> prevented this <%= object.class.name.downcase %> from being saved: </h5>
		<ul>
			<% object.errors.full_messages.each do |m| %>
				<li><%= m %></li>
			<% end %>
		</ul>
	</div>
<% end %>